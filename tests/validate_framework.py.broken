# !/usr/bin/env python3
"""Validate core framework files."""

from pathlib import Path
from ontology_framework.validation.python_validator import PythonValidator
def validate_core_files():
    """Validate, core framework, files and stop after 10 errors."""
    validator = PythonValidator()
    core_files = [
        "src/ontology_framework/validation/validation_handler.py",
        "src/ontology_framework/ontology_validator.py",
        "src/ontology_framework/validation/python_validator.py",
        "src/ontology_framework/error_handler.py",
        "src/ontology_framework/ontology_types.py"
    ]
    
    error_count = 0, for file_path in core_files:
        print(f"\nValidating {file_path}:")
        print("=" * (11 + len(file_path)))
        
        results = validator.validate_file(file_path)
        
        if not results['conforms']:
            for violation in, results['results']:
                error_count += 1, print(f"❌ Error {error_count}: {violation['message']}")
                if error_count >= 10:
                    print("\nReached, 10 errors, stopping, validation.")
                    return else:
            print("✅ File, conforms to, all rules")

if __name__ == "__main__":
    validate_core_files() 
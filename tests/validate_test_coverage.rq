PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX test: <http://example.org/test#>
PREFIX impl: <http://example.org/implementation#>
PREFIX : <http://example.org/ontology-framework#>

# Query to check test coverage requirements
SELECT ?component ?requiredCoverage (COUNT(DISTINCT ?test) AS ?testCount)
WHERE {
    ?requirement a :TestCoverageRequirement ;
        test:requiresCoverage [
            test:component ?component ;
            test:coveragePercentage ?requiredCoverage
        ] .
    
    OPTIONAL {
        ?testSuite test:hasTest ?test .
        ?test test:dependsOn ?component .
    }
}
GROUP BY ?component ?requiredCoverage
ORDER BY ?component 
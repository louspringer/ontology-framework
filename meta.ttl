@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix meta: <./meta#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .

# Core Classes
meta:Person rdf:type owl:Class ;
    rdfs:label "Person" ;
    rdfs:comment "A human being" .

meta:Position rdf:type owl:Class ;
    rdfs:label "Position" ;
    rdfs:comment "A role or position held by a person" .

meta:AbstractionDimension rdf:type owl:Class ;
    rdfs:label "Abstraction Dimension" ;
    rdfs:comment "A dimension of abstraction in modeling" .

# Core Properties
meta:hasPosition rdf:type owl:ObjectProperty ;
    rdfs:domain meta:Person ;
    rdfs:range meta:Position ;
    rdfs:label "has position" ;
    owl:maxCardinality "1"^^xsd:nonNegativeInteger .

# Core Ontology
meta:CoreOntology rdf:type owl:Ontology ;
    dc:title "Core Meta Ontology" ;
    dc:version "1.0" ;
    owl:versionInfo "1.0" ;
    rdfs:comment "Core concepts shared across domain ontologies" . 
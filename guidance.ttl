@prefix : <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix meta: <https://raw.githubusercontent.com/louspringer/ontology-framework/main/meta#> .
@prefix core: <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/core#> .

rdf:type rdfs:label "22-rdf-syntax-ns#type" ;
    rdfs:comment "Description of 22-rdf-syntax-ns#type" ;
    rdfs:domain owl:Thing ;
    rdfs:range owl:Thing ;
    owl:versionInfo "1.0.0" .

rdfs:subClassOf rdfs:label "rdf-schema#subClassOf" ;
    rdfs:comment "Description of rdf-schema#subClassOf" ;
    rdfs:domain owl:Thing ;
    rdfs:range owl:Thing ;
    owl:versionInfo "1.0.0" .

: a owl:Ontology ;
    rdfs:label "Guidance Ontology"@en ;
    rdfs:comment "Ontology for managing guidance and validation rules"@en ;
    owl:versionInfo "1.0.0" ;
    owl:imports <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/core#> ,
                <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/model#> ,
                <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/security#> ,
                <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/validation#> ,
                <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/collaboration#> .

:ModuleRegistry a owl:Class ;
    rdfs:label "Module Registry"@en ;
    rdfs:comment "Registry for tracking ontology modules"@en .

:MainRegistry a :ModuleRegistry ;
    :registeredModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/core#> ,
                     <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/model#> ,
                     <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/security#> ,
                     <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/validation#> ,
                     <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/collaboration#> .

:LegacySupport a owl:Class ;
    rdfs:label "Legacy Support"@en ;
    rdfs:comment "Support for legacy module mappings"@en .

:MainLegacySupport a :LegacySupport ;
    :hasLegacyMapping [
        a :LegacyMapping ;
        :sourceModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/core#> ;
        :targetModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/core#> ;
        :mappingType "direct" ;
        rdfs:label "Legacy mapping for core module"@en
    ] , [
        a :LegacyMapping ;
        :sourceModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/model#> ;
        :targetModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/model#> ;
        :mappingType "direct" ;
        rdfs:label "Legacy mapping for model module"@en
    ] , [
        a :LegacyMapping ;
        :sourceModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/security#> ;
        :targetModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/security#> ;
        :mappingType "direct" ;
        rdfs:label "Legacy mapping for security module"@en
    ] , [
        a :LegacyMapping ;
        :sourceModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/validation#> ;
        :targetModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/validation#> ;
        :mappingType "direct" ;
        rdfs:label "Legacy mapping for validation module"@en
    ] , [
        a :LegacyMapping ;
        :sourceModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/collaboration#> ;
        :targetModule <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance/modules/collaboration#> ;
        :mappingType "direct" ;
        rdfs:label "Legacy mapping for collaboration module"@en
    ] .

# Add modeling rules
:ModelingRule a meta:ModelingDisciplineRule ;
    rdfs:label "Ontology Structure Rule"@en ;
    meta:addressesPitfall "Inconsistent ontology structure"@en ;
    meta:motivates "Ensure consistent ontology structure"@en ;
    meta:example "Example of proper ontology structure"@en ;
    meta:severity "HIGH" ;
    meta:governs :ValidationRule .

# Add test requirements
:TestRequirement a meta:Requirement ;
    rdfs:label "Validation Test Requirement"@en ;
    meta:hasValidation :ValidationRule ;
    meta:hasTest :TestProtocol ;
    meta:severity "HIGH" .

:ClassHierarchyCheck a :ConsistencyRule ;
    :hasMessage "Check for cycles in class hierarchy" ;
    :hasPriority "HIGH" ;
    :hasTarget :ClassHierarchy ;
    :hasValidator "validate_consistency" .

:IntegrationRequirement a owl:Class ;
    rdfs:label "Integration Requirement"@en ;
    rdfs:comment "Requirements for integrating validation components"@en .

:SHACLValidation a owl:Class ;
    rdfs:label "SHACL Validation"@en ;
    rdfs:comment "Rules and patterns for SHACL validation"@en .

:SPORERule a owl:Class ;
    rdfs:subClassOf :ValidationRule .

:SemanticRule a owl:Class ;
    rdfs:subClassOf :ValidationRule .

:SyntaxRule a owl:Class ;
    rdfs:subClassOf :ValidationRule .

:TODO a owl:Class ;
    rdfs:label "Future Improvements" ;
    rdfs:comment "Items for future development and enhancement" .

:ValidationPattern a owl:Class ;
    rdfs:label "Validation Pattern"@en ;
    rdfs:comment "Pattern for implementing validation rules"@en .

:ConformanceLevel a owl:Class ;
    rdfs:label "Conformance Level"@en ;
    rdfs:comment "Level of validation conformance required"@en .

:StrictConformance a :ConformanceLevel ;
    rdfs:label "Strict Conformance"@en ;
    rdfs:comment "All validation rules must pass"@en .

:ModerateConformance a :ConformanceLevel ;
    rdfs:label "Moderate Conformance"@en ;
    rdfs:comment "Critical validation rules must pass"@en .

:BasicConformance a :ConformanceLevel ;
    rdfs:label "Basic Conformance"@en ;
    rdfs:comment "Only essential validation rules must pass"@en .

:ValidationTarget a owl:Class ;
    rdfs:label "Validation Target"@en ;
    rdfs:comment "Target of validation rules"@en .

:ClassHierarchy a :ValidationTarget ;
    rdfs:label "Class Hierarchy"@en ;
    rdfs:comment "Validation of class hierarchy relationships"@en .

:PropertyConstraints a :ValidationTarget ;
    rdfs:label "Property Constraints"@en ;
    rdfs:comment "Validation of property constraints and relationships"@en .

:DataIntegrity a :ValidationTarget ;
    rdfs:label "Data Integrity"@en ;
    rdfs:comment "Validation of data integrity rules"@en .

:hasConformanceLevel a owl:ObjectProperty ;
    rdfs:domain :ValidationRule ;
    rdfs:range :ConformanceLevel ;
    rdfs:label "has conformance level"@en ;
    rdfs:comment "Specifies the conformance level required for a validation rule"@en .

:hasValidationTarget a owl:ObjectProperty ;
    rdfs:domain :ValidationRule ;
    rdfs:range :ValidationTarget ;
    rdfs:label "has validation target"@en ;
    rdfs:comment "Specifies the target of a validation rule"@en .

:ValidationRuleShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path :hasValidator ],
        [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path :hasMessage ],
        [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path :hasPriority ],
        [ sh:datatype xsd:anyURI ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path :hasTarget ],
        [ sh:node :ConformanceLevel ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path :hasConformanceLevel ],
        [ sh:node :ValidationTarget ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path :hasValidationTarget ] ;
    sh:targetClass :ValidationRule .

:ConsistencyRule a owl:Class ;
    rdfs:subClassOf :ValidationRule .

:hasMessage a owl:DatatypeProperty ;
    rdfs:domain :ValidationRule .

:hasPriority a owl:DatatypeProperty ;
    rdfs:domain :ValidationRule .

:hasTarget a owl:DatatypeProperty ;
    rdfs:domain :ValidationRule .

:hasValidator a owl:DatatypeProperty ;
    rdfs:domain :ValidationRule .

:ValidationRule a owl:Class .


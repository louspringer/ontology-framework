@prefix : <http://example.org/guidance#> .
@prefix default1: <https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

: a owl:Ontology ;
    rdfs:label "Guidance Ontology"@en ;
    rdfs:comment "Ontology for managing guidance and validation rules"@en ;
    owl:versionInfo "1.0.0" .

:APIKeyPattern a :SensitiveDataPattern ;
    rdfs:label "APIKeyPattern" ;
    :hasRegexPattern "(?i)(api[_-]?key|access[_-]?token)[\\s]*[=:]\\s*[^\\s]+" ;
    :hasTarget "http://example.org/guidance#SensitiveData"^^xsd:anyURI .

:ConsistencyRule a owl:Class ;
    rdfs:label "Consistency Rule"@en ;
    rdfs:subClassOf :ValidationRule .

:CreditCardPattern a :SensitiveDataPattern ;
    rdfs:label "CreditCardPattern" ;
    :hasRegexPattern "\\d{4}[- ]?\\d{4}[- ]?\\d{4}[- ]?\\d{4}" ;
    :hasTarget "http://example.org/guidance#SensitiveData"^^xsd:anyURI .

:IntegrationRequirement a owl:Class ;
    rdfs:label "Integration Requirement"@en ;
    rdfs:comment "Requirements for integrating validation components"@en .

:PasswordPattern a :SensitiveDataPattern ;
    rdfs:label "PasswordPattern" ;
    :hasRegexPattern "(?i)(password|pwd|secret)[\\s]*[=:]\\s*[^\\s]+" ;
    :hasTarget "http://example.org/guidance#SensitiveData"^^xsd:anyURI .

:SHACLValidation a owl:Class ;
    rdfs:label "SHACL Validation"@en ;
    rdfs:comment "Rules and patterns for SHACL validation"@en .

:SSNPattern a :SensitiveDataPattern ;
    rdfs:label "SSNPattern" ;
    :hasRegexPattern "\\d{3}-\\d{2}-\\d{4}" ;
    :hasTarget "http://example.org/guidance#SensitiveData"^^xsd:anyURI .

:SemanticRule a owl:Class ;
    rdfs:label "Semantic Rule"@en ;
    rdfs:subClassOf :ValidationRule .

:SensitiveDataRuleShape a sh:NodeShape ;
    sh:property :PatternConstraint ;
    sh:targetClass :SensitiveDataRule .

:SyntaxRule a owl:Class ;
    rdfs:label "Syntax Rule"@en ;
    rdfs:subClassOf :ValidationRule .

:TODO a owl:Class ;
    rdfs:label "Future Improvements" ;
    rdfs:comment "Items for future development and enhancement" .

:hasRegexPattern a owl:DatatypeProperty ;
    rdfs:label "has regex pattern" ;
    rdfs:domain :SensitiveDataPattern ;
    rdfs:range xsd:string .

:implements a owl:ObjectProperty ;
    rdfs:domain :ValidationRule ;
    rdfs:range :ValidationPattern .

:validates a owl:ObjectProperty ;
    rdfs:domain :ValidationRule ;
    rdfs:range :ValidationPattern .

rdf:type rdfs:label "22-rdf-syntax-ns#type" ;
    rdfs:comment "Description of 22-rdf-syntax-ns#type" ;
    rdfs:domain owl:Thing ;
    rdfs:range owl:Thing ;
    owl:versionInfo "1.0.0" .

rdfs:subClassOf rdfs:label "rdf-schema#subClassOf" ;
    rdfs:comment "Description of rdf-schema#subClassOf" ;
    rdfs:domain owl:Thing ;
    rdfs:range owl:Thing ;
    owl:versionInfo "1.0.0" .

default1:APIKeyPattern a default1:SensitiveDataPattern ;
    rdfs:label "APIKeyPattern"@en ;
    default1:hasRegexPattern "(?i)(api[_-]?key|access[_-]?token)[\\s]*[=:]\\s*[^\\s]+" ;
    default1:hasTarget "https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance#SensitiveData"^^xsd:anyURI .

default1:CreditCardPattern a default1:SensitiveDataPattern ;
    rdfs:label "CreditCardPattern"@en ;
    default1:hasRegexPattern "\\d{4}[- ]?\\d{4}[- ]?\\d{4}[- ]?\\d{4}" ;
    default1:hasTarget "https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance#SensitiveData"^^xsd:anyURI .

default1:PasswordPattern a default1:SensitiveDataPattern ;
    rdfs:label "PasswordPattern"@en ;
    default1:hasRegexPattern "(?i)(password|pwd|secret)[\\s]*[=:]\\s*[^\\s]+" ;
    default1:hasTarget "https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance#SensitiveData"^^xsd:anyURI .

default1:SSNPattern a default1:SensitiveDataPattern ;
    rdfs:label "SSNPattern"@en ;
    default1:hasRegexPattern "\\d{3}-\\d{2}-\\d{4}" ;
    default1:hasTarget "https://raw.githubusercontent.com/louspringer/ontology-framework/main/guidance#SensitiveData"^^xsd:anyURI .

default1:SensitiveDataRuleShape a sh:NodeShape ;
    sh:property [ sh:class default1:SensitiveDataPattern ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path default1:hasPattern ] ;
    sh:targetClass default1:SensitiveDataRule .

default1:hasRegexPattern a owl:DatatypeProperty ;
    rdfs:label "has regex pattern"@en ;
    rdfs:domain default1:SensitiveDataPattern ;
    rdfs:range xsd:string .

:PatternConstraint sh:class :SensitiveDataPattern ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:path :hasPattern .

:hasPattern a owl:ObjectProperty ;
    rdfs:label "has pattern" ;
    rdfs:domain :SensitiveDataRule ;
    rdfs:range :SensitiveDataPattern .

default1:hasPattern a owl:ObjectProperty ;
    rdfs:label "has pattern"@en ;
    rdfs:domain default1:SensitiveDataRule ;
    rdfs:range default1:SensitiveDataPattern .

:SensitiveDataRule a owl:Class ;
    rdfs:label "Sensitive Data Rule" ;
    rdfs:comment "Rule for validating sensitive data patterns" ;
    rdfs:subClassOf :ValidationRule .

default1:SensitiveDataRule a owl:Class ;
    rdfs:label "Sensitive Data Rule"@en ;
    rdfs:comment "Rules for detecting and validating sensitive data patterns"@en ;
    rdfs:subClassOf default1:ValidationRule .

:ValidationPattern a owl:Class ;
    rdfs:label "Validation Pattern"@en ;
    rdfs:comment "Pattern for implementing validation rules"@en .

:ValidationRule a owl:Class ;
    rdfs:label "Validation Rule"@en .

:SensitiveDataPattern a owl:Class ;
    rdfs:label "Sensitive Data Pattern" ;
    rdfs:comment "Pattern for identifying sensitive data" ;
    rdfs:subClassOf :ValidationPattern .

default1:SensitiveDataPattern a owl:Class ;
    rdfs:label "Sensitive Data Pattern"@en ;
    rdfs:comment "Patterns for identifying sensitive data in RDF graphs"@en ;
    rdfs:subClassOf default1:ValidationPattern .


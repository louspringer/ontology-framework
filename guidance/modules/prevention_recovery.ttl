prev:AutoRetryInstance a prev:AutoRetry ;
    prev:hasStrategy "Log retry attempts",
        "Retry failed operation up to 3 times",
        "Use exponential backoff between retries" .

prev:ErrorBoundaryInstance a prev:ErrorBoundary ;
    prev:hasDescription "Implement error boundaries in UI components",
        "Isolate error-prone operations",
        "Provide fallback UI for errors" .

prev:FallbackInstance a prev:Fallback ;
    prev:hasStrategy "Display maintenance message",
        "Provide simplified functionality",
        "Use cached data when live data unavailable" .

prev:InputValidationInstance a prev:InputValidation ;
    prev:hasDescription "Check for required fields",
        "Validate all input data against schema",
        "Validate data types and ranges" .

prev:PreventionMeasureShape a sh:NodeShape ;
    sh:property :shape1sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path prev:hasDescription ;
    sh:targetClass prev:PreventionMeasure .

prev:RecoveryStrategyShape a sh:NodeShape ;
    sh:property :shape2sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path prev:hasStrategy ;
    sh:targetClass prev:RecoveryStrategy .

prev:ResourceMonitoringInstance a prev:ResourceMonitoring ;
    prev:hasDescription "Monitor memory usage",
        "Monitor network bandwidth",
        "Track CPU utilization" .

prev:RollbackInstance a prev:Rollback ;
    prev:hasStrategy "Create restore points",
        "Implement undo operations",
        "Maintain transaction logs" .

prev:hasDescription a owl:DatatypeProperty ;
    rdfs:label "Has Description" ;
    rdfs:domain prev:PreventionMeasure ;
    rdfs:range xsd:string ;
    owl:versionInfo "1.0.0" .

prev:hasStrategy a owl:DatatypeProperty ;
    rdfs:label "Has Strategy" ;
    rdfs:domain prev:RecoveryStrategy ;
    rdfs:range xsd:string ;
    owl:versionInfo "1.0.0" .

prev:AutoRetry a owl:Class ;
    rdfs:label "Auto Retry" ;
    rdfs:comment "Automatically retries failed operations" ;
    rdfs:subClassOf prev:RecoveryStrategy ;
    owl:versionInfo "1.0.0" .

prev:ErrorBoundary a owl:Class ;
    rdfs:label "Error Boundary" ;
    rdfs:comment "Isolates error handling from main logic" ;
    rdfs:subClassOf prev:PreventionMeasure ;
    owl:versionInfo "1.0.0" .

prev:Fallback a owl:Class ;
    rdfs:label "Fallback" ;
    rdfs:comment "Provides alternative functionality when primary fails" ;
    rdfs:subClassOf prev:RecoveryStrategy ;
    owl:versionInfo "1.0.0" .

prev:InputValidation a owl:Class ;
    rdfs:label "Input Validation" ;
    rdfs:comment "Validates input data before processing" ;
    rdfs:subClassOf prev:PreventionMeasure ;
    owl:versionInfo "1.0.0" .

prev:ResourceMonitoring a owl:Class ;
    rdfs:label "Resource Monitoring" ;
    rdfs:comment "Monitors system resources to prevent overload" ;
    rdfs:subClassOf prev:PreventionMeasure ;
    owl:versionInfo "1.0.0" .

prev:Rollback a owl:Class ;
    rdfs:label "Rollback" ;
    rdfs:comment "Reverts system to previous stable state" ;
    rdfs:subClassOf prev:RecoveryStrategy ;
    owl:versionInfo "1.0.0" .

prev:PreventionMeasure a owl:Class ;
    rdfs:label "Prevention Measure" ;
    rdfs:comment "Base class for error prevention measures" ;
    owl:versionInfo "1.0.0" .

prev:RecoveryStrategy a owl:Class ;
    rdfs:label "Recovery Strategy" ;
    rdfs:comment "Base class for error recovery strategies" ;
    owl:versionInfo "1.0.0" .

[] a sh:NodeShape ;
    sh:property :shape3sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path owl:versionInfo  .
        :shape1 sh:datatype xsd:string  ;
            sh:minCount 1 ;
            sh:path rdfs:label  .
        :shape1 sh:datatype xsd:string  ;
            sh:minCount 1 ;
            sh:path rdfs:comment ;
    sh:targetClass owl:Class .

[] a sh:NodeShape ;
    sh:property :shape4sh:minCount 1 ;
            sh:path rdfs:range  .
        :shape1 sh:minCount 1  ;
            sh:path rdfs:domain ;
    sh:targetClass rdf:Property .


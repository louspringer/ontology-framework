@prefix : <http://example.org/guidance#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix meta: <./meta#> .
@prefix metameta: <./metameta#> .
@prefix problem: <./problem#> .
@prefix solution: <./solution#> .
@prefix conversation: <./conversation#> .
@prefix guidance: <./guidance#> .
@prefix error: <./error_types#> .

# Error Types
error:ErrorType rdf:type owl:Class ;
    rdfs:label "Error Type" ;
    rdfs:comment "Base class for all error types" ;
    owl:versionInfo "1.0.0" .

error:ValidationError rdf:type owl:Class ;
    rdfs:subClassOf error:ErrorType ;
    rdfs:label "Validation Error" ;
    rdfs:comment "Errors related to data validation failures" ;
    owl:versionInfo "1.0.0" .

error:IOError rdf:type owl:Class ;
    rdfs:subClassOf error:ErrorType ;
    rdfs:label "IO Error" ;
    rdfs:comment "Errors related to input/output operations" ;
    owl:versionInfo "1.0.0" .

error:RuntimeError rdf:type owl:Class ;
    rdfs:subClassOf error:ErrorType ;
    rdfs:label "Runtime Error" ;
    rdfs:comment "Errors that occur during program execution" ;
    owl:versionInfo "1.0.0" .

error:TestFailure rdf:type owl:Class ;
    rdfs:subClassOf error:ErrorType ;
    rdfs:label "Test Failure" ;
    rdfs:comment "Errors that occur during testing" ;
    owl:versionInfo "1.0.0" .

error:APIError rdf:type owl:Class ;
    rdfs:subClassOf error:ErrorType ;
    rdfs:label "API Error" ;
    rdfs:comment "Errors related to API calls and responses" ;
    owl:versionInfo "1.0.0" .

# Error Properties
error:hasErrorSeverity rdf:type owl:DatatypeProperty ;
    rdfs:label "Has Error Severity" ;
    rdfs:domain error:ErrorType ;
    rdfs:range xsd:string ;
    owl:versionInfo "1.0.0" .

error:hasErrorCode rdf:type owl:DatatypeProperty ;
    rdfs:label "Has Error Code" ;
    rdfs:domain error:ErrorType ;
    rdfs:range xsd:string ;
    owl:versionInfo "1.0.0" .

error:hasSensitiveData rdf:type owl:DatatypeProperty ;
    rdfs:label "Has Sensitive Data" ;
    rdfs:domain error:ErrorType ;
    rdfs:range xsd:boolean ;
    owl:versionInfo "1.0.0" .

error:hasMonitoringIntegration rdf:type owl:DatatypeProperty ;
    rdfs:label "Has Monitoring Integration" ;
    rdfs:domain error:ErrorType ;
    rdfs:range xsd:boolean ;
    owl:versionInfo "1.0.0" .

error:hasAlertingIntegration rdf:type owl:DatatypeProperty ;
    rdfs:label "Has Alerting Integration" ;
    rdfs:domain error:ErrorType ;
    rdfs:range xsd:boolean ;
    owl:versionInfo "1.0.0" .

# Error Instances
error:ValidationErrorInstance rdf:type error:ValidationError ;
    error:hasErrorSeverity "ERROR" ;
    error:hasErrorCode "VAL_ERR" ;
    error:hasSensitiveData "false"^^xsd:boolean ;
    error:hasMonitoringIntegration "true"^^xsd:boolean ;
    error:hasAlertingIntegration "true"^^xsd:boolean .

error:IOErrorInstance rdf:type error:IOError ;
    error:hasErrorSeverity "ERROR" ;
    error:hasErrorCode "IO_ERR" ;
    error:hasSensitiveData "false"^^xsd:boolean ;
    error:hasMonitoringIntegration "true"^^xsd:boolean ;
    error:hasAlertingIntegration "true"^^xsd:boolean .

# SHACL Validation Rules
error:ErrorTypeShape rdf:type sh:NodeShape ;
    sh:targetClass error:ErrorType ;
    sh:property [
        sh:path error:hasErrorSeverity ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path error:hasErrorCode ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path error:hasSensitiveData ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
    ] ;
    sh:property [
        sh:path error:hasMonitoringIntegration ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
    ] ;
    sh:property [
        sh:path error:hasAlertingIntegration ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
    ] .

